{
  "name": "nirlom_accounting",
  "version": "1.0.0",
  "description": "A minimal accounting application",
  "author": "Mahipat Jadav <mj@mojaave.com>",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w sqllite3",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.electron.nirlom",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.png"
    }
  },
  "repository": "https://github.com/mhjadav/electron-app",
  "keywords": [
    "Accounting",
    "Nirlom",
    "profit",
    "loss",
    "calculation"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "electron-builder": "^20.39.0",
    "electron": "^4.1.3",
    "electron-rebuild": "^1.8.4"
  },
  "dependencies": {
    "convert-excel-to-json": "^1.6.1",
    "electron-reload": "^1.4.0",
    "knex": "^0.16.5",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.22",
    "sequelize": "^5.6.0",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.0.6"
  }
}